{% extends 'base.html.twig' %}

{% block body %}
    <h1>Order List</h1>

    <div class="container mt-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Order Date</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.user.name }}</td>
                        <td>{{ order.product.name }}</td>
                        <td>{{ order.quantity }}</td>
                        <td>{{ order.createdAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
